generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  githubId  String      @unique
  username  String
  email     String?
  avatarUrl String?
  Monitor   Monitor[]
  LogSource LogSource[]
}

model Monitor {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  url         String
  monitorType String       @default("http") // "http" or "tcp"
  method      String       @default("GET")  // HTTP method (GET, POST, etc.)
  headers     Json?        // Request headers
  body        String?      // Request body
  assertions  Json?        // Assertions for status, headers, and body
  emails      String[]
  frequency   Int          @default(300)    // in seconds
  status      String       @default("RUNNING")
  regions     String[]
  user        User         @relation(fields: [userId], references: [id])
  userId      String       @db.ObjectId
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  StatusPage  StatusPage?
}

model MonitorLog {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  monitorId     String   @db.ObjectId
  isUp          Boolean
  statusCode    Int
  responseTime  Int
  region        String
  headers       Json?    // Response headers for API monitoring
  responseBody  String?  // Response body for API monitoring (truncated)
  error         String?  // Error message if any
  lastCheckedAt DateTime @default(now())
}

model LogSource {
  id        String   @id @default(cuid()) @map("_id") @db.ObjectId
  name      String
  apiKey    String   @unique
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, apiKey])
}

model StatusPage {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  monitorId   String   @db.ObjectId @unique
  monitor     Monitor  @relation(fields: [monitorId], references: [id], onDelete: Cascade)
  subdomain   String   @unique
  title       String
  description String?
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
